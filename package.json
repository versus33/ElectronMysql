{
  "name": "electron-mysql-crud",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "MySQLCRUD",
    "asar": true,
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "electron": "^8.2.0",
    "electron-reload": "^1.5.0",
    "mysql2": "^2.1.0",
    "promise-mysql": "^4.1.3"
  },
  
  "devDependencies": {
    "electron-builder": "^22.10.5"
  }
}
